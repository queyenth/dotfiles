gsettings set org.gnome.desktop.interface gtk-theme rose-pine-dawn-gtk
gsettings set org.gnome.desktop.interface icon-theme oomox-rose-pine-dawn
gsettings set org.gnome.desktop.interface cursor-theme BreezeX-RosePineDawn-Linux
gsettings set org.gnome.desktop.interface font-name "Iosevka Comfy Motion Duo SemiLight 10"
