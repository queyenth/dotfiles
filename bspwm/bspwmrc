#!/bin/sh

bspc config border_width        2
bspc config top_padding         20
bspc config window_gap          5
bspc config split_ratio         0.50
bspc config borderless_monocle  true
bspc config gapless_monocle     true
bspc config focus_by_distance   true
bspc config auto_cancel         true

# Colors
bspc config normal_border_color none
bspc config active_border_color "#525252"
bspc config urgent_border_color "#525252"
bspc config focused_border_color "#1E4E51"
bspc config presel_border_color none

bspc monitor -d rei iti ni san yon

urxvtd &
xsetroot -cursor_name left_ptr
hsetroot -tile ~/dotfiles/noisy_net.png
compton -b --config ~/dotfiles/compton.conf &
bspwm_panel.sh &
