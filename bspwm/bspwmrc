#!/bin/sh

bspc config border_width        5
bspc config top_padding         30
bspc config window_gap          10
bspc config split_ratio         0.50
bspc config borderless_monocle  true
bspc config gapless_monocle     true
bspc config focus_by_distance   true
bspc config auto_cancel         true

# Colors
bspc config normal_border_color none
bspc config active_border_color "#5ed1d3"
bspc config urgent_border_color "#525252"
bspc config focused_border_color "#5ed1d3"
bspc config presel_border_color none

bspc monitor -d \ TERM \ CODE \ FILE \ WEB \ CHAT

bspc rule -a vlc floating=on
bspc rule -a mplayer floating=on
bspc rule -a Skype floating=on
bspc rule -a Steam floating=on
bspc rule -a Spotify floating=on

urxvtd &
xsetroot -cursor_name left_ptr
hsetroot -fill ~/Downloads/wallhaven-207747.png
compton -b --config ~/dotfiles/compton.conf &
bspwm_panel.sh &
