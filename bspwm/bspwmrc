#!/bin/sh

bspc config border_width 3
bspc config top_padding 35
bspc config window_gap 2
bspc config split_ratio 0.52
bspc config borderless_monocle true
bspc config gapless_monocle true

# Colors
bspc config normal_border_color "#fdf6e3"
bspc config active_border_color "#586e75"
bspc config focused_border_color "#586e75"
bspc config presel_feedback_color "#586e75"

bspc monitor -d WWW TERM CODE MUSIC CHAT MISC MEDIA TRASH

bspc config pointer_modifier control
bspc config pointer_action1 move
bspc config pointer_action2 resize_side
bspc config pointer_action3 resize_corner

bspc config external_rules_command ~/.config/bspwm/bspwm-rules

# Notifications!
dunst &

# Polybar!
polybar example &
