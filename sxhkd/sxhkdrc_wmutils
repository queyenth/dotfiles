super + Return
	urxvtc

super + r
	~/.config/bspwm/dmenuwrapper

super + shift + s
  scrot '%H-%M-%S_%d-%m-%Y_$wx$h_scrot.png' -e 'mv $f ~/Pictures/'

alt + {Up,Down}
  volumenotify {+,-} 3

alt + m
  volumenotify !

alt + ctrl + m
  mpdnotify -t

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


