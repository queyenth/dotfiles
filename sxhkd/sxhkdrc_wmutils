#   |_| |_| |_|___|____/  |___|____/  |_| |_|\___/  \_/\_/      |_| \___/ \___/     \_/\_/  |_|  |_|

super + {h,j,k,l}
  wmv {-10 0, 0 +10, 0 -10, +10 0} $(pfw)

super + shift + {h,j,k,l}
  wmv {-40 0, 0 +40, 0 -40, +40 0} $(pfw)

super + alt + {h,j,k,l}
  wrs {-10 0, 0 +10, 0 -10, +10 0} $(pfw)

super + alt + shift + {h,j,k,l}
  wrs {-40 0, 0 +40, 0 -40, +40 0} $(pfw)

super + w
  killw $(pfw)

super + s
  chwso -i $(pfw)

