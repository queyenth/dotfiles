#
# bspwm hotkeys
#

# Restart polybar
super + ctrl + q
    pkill polybar; polybar example

super + {_,shift + }w
    bspc node -{c,k}

super + b
    bspc desktop -B

super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

super + {grave,Tab}
    bspc {window,desktop} -f last

super + apostrophe
    bspc node -s last

super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

super + y
    bspc node -w last.manual

super + m
    bspc node -s biggest

super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

super + {comma,period}
    bspc desktop -C {backward,forward}

super + bracket{left,right}
    bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

super + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
    bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

super + alt + shift + {h,j,k,l}
    bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

super + ctrl + {1-9}
    bspc node -o 0.{1-9}

super + {_, shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

super + Return
    alacritty

super + r
    dmenu_run
    #rofi -show drun

super + p
    rofi -show window

super + c
    ~/scripts/capture

super + shift + c
    ~/scripts/capturelink

super + e
    ~/scripts/runem

super + ctrl + shift + l
    python3 ~/scripts/py3lock.py

super + ctrl + shift + 3
    gscreenshot-cli -c

super + ctrl + shift + 4
    gscreenshot-cli -c -s

super + minus
    ~/scripts/hide_window

super + equal
    ~/scripts/mark_window

XF86AudioRaiseVolume
    ~/scripts/volumenotify + 5

XF86AudioLowerVolume
    ~/scripts/volumenotify - 5

XF86AudioMute
    ~/scripts/volumenotify !

XF86AudioPlay
    mpc toggle

XF86AudioPrev
    mpc prev

XF86AudioNext
    mpc next

super + F10
    ~/scripts/changesource

super + Escape
    pkill -USR1 -x sxhkd
